@using Microsoft.AspNetCore.Identity
@using GestionEnseignants.Areas.Identity.Data

@inject SignInManager<GestionEnseignantsUser> SignInManager
@inject UserManager<GestionEnseignantsUser> UserManager

<ul class="navbar-nav d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div style="margin-left:1230px;margin-top:-60px;z-index:1;">
            <li class="nav-item" style="margin-left:-150px">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><b>Hello <i>@UserManager.GetUserName(User)!</i></b></a>
            </li>
        <li class="nav-item" style="margin-left:130px;margin-top:-40px;">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class="Btn" id="logout" type="submit">

                    <div class="sign"><svg viewBox="0 0 512 512"><path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"></path></svg></div>

                    <div class="text">Logout</div>
                </button>



                </form>
        </li>
        </div>
    }
    else
    {
        <div style="margin-left:1230px;margin-top:-60px;z-index:1;">
            <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register"><b>Register</b></a>
            </li>
            <li class="nav-item" style="margin-left:130px;margin-top:-40px;">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"><b>Login</b></a>
            </li>
        </div>

    }
</ul>

